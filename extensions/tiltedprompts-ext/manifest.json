{
    "manifest_version": 3,
    "name": "TiltedPrompts – AI Prompt Assistant",
    "version": "1.0.0",
    "description": "Browse, copy, and inject AI prompts for your business. Instagram, WhatsApp, Email, LinkedIn – all in one click.",
    "permissions": [
        "storage",
        "activeTab"
    ],
    "host_permissions": [
        "http://localhost:5000/*",
        "https://*.replit.app/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "https://web.whatsapp.com/*",
                "https://mail.google.com/*",
                "https://www.linkedin.com/*",
                "https://www.instagram.com/*",
                "https://docs.google.com/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "content-styles.css"
            ]
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}