# ============================================
# tiltedprompts – Environment Configuration
# Copy this file to .env and fill in your values
# ============================================

# --- Brand ---
BRAND_NAME=tiltedprompts
SUPPORT_EMAIL=hello@tiltedprompts.com
TAGLINE=AI prompts that actually work for your business

# --- LLM Provider ---
# Options: "local" | "deepseek"
LLM_PROVIDER=local

# Local LLM (e.g., LM Studio, Ollama, etc.)
# Must be OpenAI-compatible. Set either LOCAL_LLM_URL or LOCAL_LLM_BASE_URL.
# Just the base URL is fine — the code auto-appends /v1/chat/completions.
LOCAL_LLM_URL=http://localhost:1234
LOCAL_LLM_BASE_URL=http://localhost:1234
LOCAL_LLM_MODEL=default

# DeepSeek (fallback / production)
DEEPSEEK_API_KEY=
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1

# --- Server ---
HOST=0.0.0.0
PORT=5000
DEBUG=true

# --- Storage ---
# Where generated bundles are saved
BUNDLES_DIR=./bundles

# --- Gmail SMTP (Phase 3) ---
GMAIL_USER=
GMAIL_APP_PASSWORD=
GMAIL_FROM_NAME=tiltedprompts

# --- Gumroad (Phase 3) ---
GUMROAD_SELLER_ID=
GUMROAD_API_KEY=

# --- Google Sheets (Phase 5, optional) ---
GOOGLE_SHEETS_CREDENTIALS_FILE=
GOOGLE_SHEETS_SPREADSHEET_ID=
